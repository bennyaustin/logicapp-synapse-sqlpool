{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80,
      "metadata": {
        "description": "Name of the Logic App."
      }
    },
    "logicAppLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "allowedValues": [
        "[resourceGroup().location]",
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "uksouth",
        "ukwest",
        "westcentralus",
        "westus2",
        "koreacentral",
        "koreasouth",
        "francecentral",
        "francesouth",
        "uaecentral",
        "uaenorth",
        "southafricanorth",
        "southafricawest",
        "switzerlandnorth",
        "switzerlandwest",
        "germanynorth",
        "germanywestcentral",
        "norwayeast",
        "brazilsoutheast"
      ],
      "metadata": {
        "description": "Location of the Logic App."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('logicAppName')]",
      "type": "Microsoft.Logic/workflows",
      "location": "[parameters('logicAppLocation')]",
      "tags": {
        "displayName": "LogicApp"
      },
      "apiVersion": "2016-06-01",
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "actions": {
            "subscriptionId": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "subscriptionId",
                    "type": "string",
                    "value": "@{triggerBody()?['subscriptionId']}"
                  }
                ]
              },
              "runAfter": {
                "sku": [
                  "Succeeded"
                ]
              }
            },
            "HTTP_200_Response": {
              "type": "Response",
              "kind": "http",
              "inputs": {
                "statusCode": 200
              },
              "runAfter": {
                "Resume": [
                  "Succeeded"
                ]
              }
            },
            "resourceGroupName": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "resourceGroupName",
                    "type": "string",
                    "value": "@{triggerBody()?['resourceGroupName']}"
                  }
                ]
              },
              "runAfter": {
                "workspaceName": [
                  "Succeeded"
                ]
              }
            },
            "workspaceName": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "workspaceName",
                    "type": "string",
                    "value": "@{triggerBody()?['workspaceName']}"
                  }
                ]
              },
              "runAfter": {
                "subscriptionId": [
                  "Succeeded"
                ]
              }
            },
            "sqlPoolName": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "sqlPoolName",
                    "type": "string",
                    "value": "@{triggerBody()?['sqlPoolName']}"
                  }
                ]
              },
              "runAfter": {
                "resourceGroupName": [
                  "Succeeded"
                ]
              }
            },
            "apiVersion": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "apiVersion",
                    "type": "string",
                    "value": "@{triggerBody()?['apiVersion']}"
                  }
                ]
              },
              "runAfter": {
                "sqlPoolName": [
                  "Succeeded"
                ]
              }
            },
            "getURI": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "getURI",
                    "type": "string",
                    "value": "@{concat('https://management.azure.com/subscriptions/',variables('subscriptionId'),'/resourceGroups/',variables('resourceGroupName'),'/providers/Microsoft.Synapse/workspaces/', variables('workspaceName'),'/sqlPools/',variables('sqlPoolName'),'?api-version=',variables('apiVersion'))}"
                  }
                ]
              },
              "runAfter": {
                "apiVersion": [
                  "Succeeded"
                ]
              }
            },
            "GetAPI": {
              "type": "Http",
              "inputs": {
                "method": "GET",
                "uri": "@{variables('getURI')}",
                "authentication": {
                  "type": "ManagedServiceIdentity"
                }
              },
              "runAfter": {
                "pauseURI": [
                  "Succeeded"
                ]
              }
            },
            "action": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "action",
                    "type": "string",
                    "value": "@{triggerBody()?['action']}"
                  }
                ]
              },
              "runAfter": {}
            },
            "sku": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "sku",
                    "type": "string",
                    "value": "@{triggerBody()?['sku']}"
                  }
                ]
              },
              "runAfter": {
                "action": [
                  "Succeeded"
                ]
              }
            },
            "resumeURI": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "resumeURI",
                    "type": "string",
                    "value": "@{concat('https://management.azure.com/subscriptions/',variables('subscriptionId'),'/resourceGroups/', variables('resourceGroupName'),'/providers/Microsoft.Synapse/workspaces/',variables('workspaceName'),'/sqlPools/',variables('sqlPoolName'),'/resume?api-version=', variables('apiVersion'))}"
                  }
                ]
              },
              "runAfter": {
                "getURI": [
                  "Succeeded"
                ]
              }
            },
            "pauseURI": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "pauseURI",
                    "type": "string",
                    "value": "@concat('https://management.azure.com/subscriptions/',variables('subscriptionId'),'/resourceGroups/', variables('resourceGroupName'),'/providers/Microsoft.Synapse/workspaces/',variables('workspaceName'),'/sqlPools/',variables('sqlPoolName'),'/pause?api-version=', variables('apiVersion'))"
                  }
                ]
              },
              "runAfter": {
                "resumeURI": [
                  "Succeeded"
                ]
              }
            },
            "Resume": {
              "type": "If",
              "expression": {
                "and": [
                  {
                    "equals": [
                      "@variables('action')",
                      "resume"
                    ]
                  },
                  {
                    "equals": [
                      "@body('GetAPI')?['properties']?['status']",
                      "Paused"
                    ]
                  }
                ]
              },
              "actions": {
                "ResumeAPI": {
                  "type": "Http",
                  "inputs": {
                    "method": "POST",
                    "uri": "@{variables('resumeURI')}",
                    "authentication": {
                      "type": "ManagedServiceIdentity"
                    }
                  },
                  "runAfter": {}
                },
                "Until-Resume": {
                  "type": "Until",
                  "expression": "@equals(body('GetAPI-Resume')?['properties']?['status'], 'Online')",
                  "limit": {
                    "count": 5000,
                    "timeout": "PT1H"
                  },
                  "actions": {
                    "GetAPI-Resume": {
                      "type": "Http",
                      "inputs": {
                        "method": "GET",
                        "uri": "@{variables('getURI')}",
                        "authentication": {
                          "type": "ManagedServiceIdentity"
                        }
                      },
                      "runAfter": {}
                    }
                  },
                  "runAfter": {
                    "ResumeAPI": [
                      "Succeeded"
                    ]
                  }
                }
              },
              "runAfter": {
                "GetAPI": [
                  "Succeeded"
                ]
              }
            }
          },
          "parameters": {},
          "triggers": {
            "manual": {
              "type": "Request",
              "kind": "Http",
              "inputs": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "action": {
                      "type": "string"
                    },
                    "sku": {
                      "type": "string"
                    },
                    "subscriptionId": {
                      "type": "string"
                    },
                    "resourceGroupName": {
                      "type": "string"
                    },
                    "workspaceName": {
                      "type": "string"
                    },
                    "sqlPoolName": {
                      "type": "string"
                    },
                    "apiVersion": {
                      "type": "string"
                    }
                  }
                },
                "method": "POST"
              }
            }
          },
          "contentVersion": "1.0.0.0",
          "outputs": {}
        },
        "parameters": {}
      }
    }
  ],
  "outputs": {}
}